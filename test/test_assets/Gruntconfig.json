{
  "srcPaths": {
    "make": "src/project.make",
    "drupal": "src"
  },
  "siteUrls": {
    "default": "http://project.local"
  },
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**"]
  },
  "phpcs": {
    "path": "bin/phpcs"
  },
  "phpmd": {
    "path": "bin/phpmd"
  },
  "drush": {
    "cmd": "bin/drush",
    "make": {
      "args": ["--concurrency=16"]
    }
  },
  "behat": {
    "flags": "--tags ~@wip"
  },
  "themes": {
    "example_theme": {
      "path": "<%= config.srcPaths.drupal %>/themes/example_theme",
      "compass": true
    }
  }
}
